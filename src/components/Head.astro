---
const desc = "Indipendent creative developer & designer";
---

<meta name="description" content={desc} />
<link rel="canonical" href={Astro.site} />
<link rel="manifest" href="/manifest.json" />

<meta property="og:title" content="Michele Volonghi" />
<meta property="og:description" content={desc} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.site} />
<meta property="og:image" content="/icons/og.png" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.site} />
<meta name="twitter:title" content="Michele Volonghi" />
<meta name="twitter:description" content={desc} />
<meta name="twitter:image" content="/icons/og.png" />

<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/icons/favicon-32x32.png"
/>
<link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/icons/favicon-16x16.png"
/>

<link rel="manifest" href="/icons/site.webmanifest" />

<link rel="shortcut icon" href="/favicon.ico" />

<meta name="apple-mobile-web-app-title" content="Michele Volonghi" />
<meta name="application-name" content="Michele Volonghi" />
<meta name="msapplication-TileColor" content="#3d4294" />
<meta name="msapplication-config" content="/icons/browserconfig.xml" />
<meta name="theme-color" content="#3d4294" />

<link
    rel="preload"
    href="/fonts/monasans.woff2"
    as="font"
    type="font/woff2"
    crossorigin
/>
