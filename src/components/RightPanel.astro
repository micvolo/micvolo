---
const { isHome } = Astro.props;
---

<div class="panel right" class:list={{ open: !isHome }}>
    <div class="container">
        <slot />
    </div>
</div>
<style lang="scss">
    .panel {
        overflow-y: auto;
        box-shadow: -1em 0 3rem var(--bg3);
        transition:
            flex-basis 0.8s,
            transform 0.8s;

        flex-basis: 0%;
        transform: translateX(100%);
        @media (max-width: 64rem) {
            overflow-y: visible;
            transform: none;
        }
        &.open {
            flex-basis: 300%;
            transform: translateX(0%);
            @media (max-width: 64rem) {
                transform: none;
            }
        }
        .container {
            width: calc(75vw - (var(--padding)));
            max-width: none;
            flex-basis: 100%;
            background-color: var(--bg3);
            background-image: var(--bg);
            background-size: 100px;
            @media (max-width: 64rem) {
                width: 100%;
            }
        }
    }
</style>
